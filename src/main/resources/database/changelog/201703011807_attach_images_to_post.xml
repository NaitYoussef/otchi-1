<?xml version="1.0" encoding="utf-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">


    <changeSet id="201703011807" author="Abdellah">
        <createTable tableName="POST_IMAGES">
            <column name="URL" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="POST_ID" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="201703041732" author="Abdellah">
        <sql>
            INSERT INTO POST_IMAGES (POST_ID, URL)
            SELECT RECIPE_ID, URL
            FROM RECIPE_IMAGES
        </sql>

        <sql>
            INSERT INTO POST_IMAGES (POST_ID, URL)
            SELECT STORY_ID, URL
            FROM STORY_IMAGES
        </sql>

        <sql>
            DROP TABLE RECIPE_IMAGES
        </sql>

        <sql>
            DROP TABLE STORY_IMAGES
        </sql>
    </changeSet>

</databaseChangeLog>
